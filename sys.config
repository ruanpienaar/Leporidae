[

 {leporidae,
    [
        % How quickly should leporidae reconnect a disconnected
        % consumer/producer ?
        {reconnect_attempt_interval, 100},

        % Maybe we can use GLOBAL(conn,queue,ex) so that we have less repitition
        % in the app/sys.config
        % {global_connection,[
        %     {type, network},
        %     {username, <<"root">>},
        %     {passwd, <<"root">>},
        %     {vhost, <<"/">>},
        %     {host, "localhost"},
        %     {port, 5672}
        % ]},
        %{global_queuem,}
        %{global_exchange,}

        % Leporidae Producers
        % Here we have a list of producer specs used when lep_prod_sup starts.
        % each producer is spawned as it's own gen_statem (lep_produce_sm).
        {producers,[

            % Producer Example 1 - leporidae queue producer.
            %             persistant messages.
            {amqp, [
                {routing_key, <<"xxx">>},
                {basic, [
                    {delivery_mode, 2} % nonÂ­persistent (1) or persistent (2)
                ]},
                % TODO: change to use global_connection
                {connection, [
                    {type, network},
                    {username, <<"root">>},
                    {passwd, <<"root">>},
                    {vhost, <<"/">>},
                    {host, "localhost"},
                    {port, 5672}
                ]},
                {exchange,[
                    {exchange, <<"exchange1">>},
                    {type, <<"direct">>},
                    {durable, true}
                ]},
                {queue, [
                    {ticket, 0},
                    {queue, <<"leporidae">>},
                    {passive, false},
                    {durable, true},
                    {exclusive, false},
                    {auto_delete, false},
                    {nowait, false},
                    {arguments, []}
                ]}
            ]},

            % Producer Example 2 - Minimal setup
            %                      Queue1 bound to default ("") exchange
            {amqp, [
                % TODO: change to use global_connection
                {connection, [
                    {type, network},
                    {username, <<"root">>},
                    {passwd, <<"root">>},
                    {vhost, <<"/">>},
                    {host, "localhost"},
                    {port, 5672}
                ]},
                {queue, [
                    {queue, <<"queue1">>},
                    {durable, true}
                ]}
            ]}

        ]},

        % Leporidae Consumers
        % Here we have a list of consumers specs used when lep_cons_sup starts.
        % each consumers is spawned as it's own gen_statem (lep_consume_sm).
        %
        % Consumers have 2 types :
        % {consume_type, manual_consume} |
        % {consume_type, subscription}
        {consumers, [
            % {amqp, [
            %     {routing_key, <<"xxx">>},
            %     {connection, [
            %         {type, network},
            %         {username, <<"guest">>},
            %         {passwd, <<"guest">>},
            %         {vhost, <<"/">>},
            %         {host, "127.0.0.1"},
            %         {port, 5672}
            %     ]},
            %     {exchange,[
            %         {exchange, <<"exchange1">>},
            %         {type, <<"direct">>},
            %         {durable, true}
            %     ]},
            %     {queue, [
            %         {ticket, 0},
            %         {queue, <<"leporidae">>},
            %         {passive, false},
            %         {durable, true},
            %         {exclusive, false},
            %         {auto_delete, false},
            %         {nowait, false},
            %         {arguments, []}
            %     ]}
            % ]}


            % Consume Example 1 - Manual consume calls required.
            %                     queue leporidae bound to exchange "exchange1"
            {amqp, [
                {consume_type, manual_consume},
                {routing_key, <<"xxx">>},
                {consume, [
                    {no_ack, false},
                    {exclusive, false},
                    {nowait, false},
                    {arguments, []}
                ]},
                {connection, [
                    {type, network},
                    {username, <<"root">>},
                    {passwd, <<"root">>},
                    {vhost, <<"/">>},
                    {host, "localhost"},
                    {port, 5672}
                ]},
                {exchange,[
                    {exchange, <<"exchange1">>},
                    {type, <<"direct">>},
                    {durable, true}
                ]},
                {queue, [
                    {ticket, 0},
                    {queue, <<"leporidae">>},
                    {passive, false},
                    {durable, true},
                    {exclusive, false},
                    {auto_delete, false},
                    {nowait, false},
                    {arguments, []}
                ]}
            ]}

            % Consume Example 2 Let a subscription forward mesages.
            % {amqp, [
            %     {routing_key, <<"">>},
            %     {consume_type, subscription}

            % ]}
        ]}
    ]
